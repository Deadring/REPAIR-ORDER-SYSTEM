{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "public": "frontend/build",
  "routes": [
    {
      "src": "/api(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/build/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "backend/server.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  }
}
